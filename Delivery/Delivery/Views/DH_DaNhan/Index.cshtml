@model IEnumerable<Delivery.Models.getDonHang_DaNhan_Result>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="background-color: #f2f2f2; padding: 30px;">
    <div class="container">
        <div class="my-3 d-flex justify-content-between m-3">
            <h3>Đơn hàng đã nhận</h3>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-success" type="submit">Search</button>
            </form>
        </div>
        <div class="bg-white p-3 m-3 row" style="border-radius:1rem">
            <table class="table table-hover" style="background-color:#fff; border-radius:20px">
                <tr>
                    <th>
                        @Html.DisplayName("Mã đơn hàng")
                    </th>
                    <th>
                        @Html.DisplayName("Nhân viên thực hiện")
                    </th>
                    <th>
                        @Html.DisplayName("Thời gian nhận")
                    </th>
                    <th>
                        @Html.DisplayName("Trạng thái")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Actions")
                    </th>
                </tr>

                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaVanDon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTenNG)
                </td>
                <td>
                    @if (Convert.ToInt32(@item.MaTrangThai) == 2)
                    {
                        @Html.DisplayName("Đã nhận")
                    }
                </td>
                <td class="text-center">
                    @Html.ActionLink("Xem chi tiết", "Details", "DH_DaNhan", new { id = item.MaDH }, new { @class = "btn btn-outline-success mx-2" })
                    @*@Html.ActionLink("Xóa","Delete","DH_DaNhan",new { id = item.MaDH_DaNhan }, new { @class = "btn btn-outline-success mx-2" })*@
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
</div>
        