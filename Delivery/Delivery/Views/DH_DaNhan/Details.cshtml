@model Delivery.Models.DH_DaNhan

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="background-color: #f2f2f2">
    <div class="container">
    <h2 class="fw-bold mt-3">Thông tin đơn hàng</h2>

    <div class="bg-white rounded p-5 m-3">
        <div class="bg-white p-3 rounded">
            <div class="d-flex justify-content-between border-bottom">
                <h5>Thông tin đơn hàng</h5>
                @Html.ActionLink("Quay lại", "Index", "DH_DaNhan", null, new { @class = "text-dark text-decoration-none" })
            </div>
            <div class="row mt-2">
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Mã đơn hàng")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.MaDH)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Mã vận đơn")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.MaVanDon)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Mã trạng thái")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.TrangThai)" aria-label="Disabled input example" disabled readonly>
                </div>
            </div>
            @* row 2 *@
            <div class="d-flex justify-content-between border-bottom mt-5">
                <h5>Người gửi</h5>
            </div>
            <div class="row mb-5 mt-2">
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Họ tên")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.HoTenNG)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Địa chỉ")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.DiaChiNG)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Số điện thoại")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.SdtNG)" aria-label="Disabled input example" disabled readonly>
                </div>
            </div>
            @* row 3 *@
            <div class="d-flex justify-content-between border-bottom">
                <h5>Người nhận</h5>
            </div>
            <div class="row mt-2">
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Họ tên")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.HotenNN)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Địa chỉ")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.DiaChiNN)" aria-label="Disabled input example" disabled readonly>
                </div>
                <div class="col">
                    <p class="fw-bold">@Html.DisplayName("Số điện thoại")</p>
                    <input class="form-control" type="text" value="@Html.DisplayFor(model => model.SdtNN)" aria-label="Disabled input example" disabled readonly>
                </div>
            </div>
        </div>
    </div>
    </div>
</div>