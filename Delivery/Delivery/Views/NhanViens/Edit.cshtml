@model Delivery.Models.NhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row container  card-body border-0 shadow  mx-auto w-75">
        <h4>Thông tin cá nhân</h4>
        <hr />
        @*<div class="card border-0 shadow  my-5 w-75 row">*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNhanVien)
        <div class="col-4">
            <div><img src="@Html.DisplayFor(model => Model.AnhDaiDien)" alt="" style="width:10rem; height:10rem" class="rounded-circle mx-auto d-block"></div>
            <div class="text-center mt-2 fw-bold">
                <label class=" mx-auto d-block ">
                    @Html.DisplayFor(model => Model.TenNhanVien)
                </label>
            </div>
        </div>
        <div class="col-8 row" style="border-radius: 30px;">
            <div class="col-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.MaNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => Model.MaNhanVien)" aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TenNhanVien, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenNhanVien, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenNhanVien, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ChucVu.TenChucVu, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => Model.ChucVu.TenChucVu)" aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>

            </div>
            <div class="col-6">
                <div class="form-group mt-5 mb-5">

                </div>

                <div class="form-group ">
                    @Html.LabelFor(model => model.NgaySinh, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TaiKhoan.TenTaiKhoan, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input class="form-control" type="text" value="@Html.DisplayFor(model => Model.TaiKhoan.TenTaiKhoan)" aria-label="Disabled input example" disabled readonly>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10 text-end mt-3">
                        <button type="submit" value="Save" class="btn text-white " style="background: linear-gradient(90deg, #54BF5A 0.7%, #2D9147 71.82%); border-radius: 55px;">Save</button>

                    </div>
                </div>
            </div>
        </div>
        @*</div>*@
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}