@model IEnumerable<Delivery.Models.DH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color: #F2F2F2; padding: 50px;">

    <div class="d-flex justify-content-between mb-3">
        <h3 class="fw-bold">Đơn hàng chưa nhận</h3>
        <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-success" type="submit">Search</button>
        </form>
    </div>
    <div class="form-horizontal" style="background-color: white; padding: 30px; border-radius: 1rem">
        @*<p>
                @Html.ActionLink("Create New", "Create")
            </p>*@
        <div class="">
            <table class="table table-hover">
                <tr>
                    <th>
                        @Html.DisplayName("Mã đơn hàng")
                    </th>
                    <th>
                        @Html.DisplayName("Mã vận đơn")
                    </th>
                    <th>
                        @Html.DisplayName("Trạng thái")
                    </th>
                    <th class="text-center">
                        @Html.DisplayName("Actions")
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaDH)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MaVanDon)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrangThai)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaDH }, new { @class = "btn btn-outline-success mx-2" })
                            @Html.ActionLink("Nhận đơn", "NhanDon", new { id = item.MaDH }, new { @class = "btn btn-success" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
